<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/item_curr_layout_height"
    android:background="?android:attr/selectableItemBackground"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingStart="@dimen/item_curr_layout_padding"
    android:paddingEnd="@dimen/item_curr_layout_padding">

    <FrameLayout
        android:layout_width="@dimen/item_curr_item_f_layout_hw"
        android:layout_height="@dimen/item_curr_item_f_layout_hw">

        <TextView
            android:id="@+id/symbol_text_curr"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_coin_symbol_white"
            android:gravity="center"
            android:maxLines="1"
            android:textColor="@color/item_curr_layout_tv"
            android:textStyle="bold"
            tools:igmore="MissingPrefix"
            tools:text="A" />

        <ImageView
            android:id="@+id/icon_symbol_curr"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:tint="@color/item_curr_layout_iv" />
    </FrameLayout>

    <TextView
        android:id="@+id/currency_name_curr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/item_curr_item_margin"
        android:fontFamily="sans-serif-medium"
        android:textColor="@color/item_curr_layout_iv"
        android:textSize="@dimen/item_curr_bg_coin_size"
        tools:text="Bitcoin | BTC" />

</LinearLayout>