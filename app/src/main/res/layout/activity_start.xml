<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screens.start.StartActivity">

    <ImageView
        android:id="@+id/img_start_top"
        android:layout_width="@dimen/start_img_top_size"
        android:layout_height="@dimen/start_img_top_size"
        android:src="@drawable/img_start_top"
        android:translationX="@dimen/start_img_top_transX"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/img_start_center"
        android:layout_width="@dimen/start_img_center_size"
        android:layout_height="@dimen/start_img_center_size"
        android:src="@drawable/img_start_center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="@dimen/start_img_center_biasV" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/start_text_margin"
        android:layout_marginTop="@dimen/start_text_margin"
        android:layout_marginEnd="@dimen/start_text_margin"
        android:text="@string/start_app_name"
        android:textColor="@color/start_text_color"
        android:textSize="@dimen/start_text_size"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/img_start_center" />

    <ImageView
        android:id="@+id/img_start_bottom"
        android:layout_width="@dimen/start_img_bottom_size"
        android:layout_height="@dimen/start_img_bottom_size"
        android:src="@drawable/img_start_bottom"
        android:translationX="@dimen/start_img_bottom_transX"
        android:translationY="@dimen/start_img_bottom_transY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</android.support.constraint.ConstraintLayout>