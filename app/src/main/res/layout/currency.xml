<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical">

    <FrameLayout
        android:id="@+id/currency_symbol"
        android:layout_width="@dimen/frame_width_height"
        android:layout_height="@dimen/frame_width_height">

        <TextView
            android:id="@+id/symbol_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_coin_symbol"
            android:gravity="center"
            android:textStyle="bold"
            android:maxLines="1"
            android:textAllCaps="true"
            android:textColor="@color/coin_symbol"
            tools:ignore="MissingPrefix"
            tools:text="A" />

        <ImageView
            android:id="@+id/icon_symbol"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </FrameLayout>

    <TextView
        android:id="@+id/currency_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/currency_name_margin"
        android:gravity="start"
        android:textColor="@color/text_symbol"
        android:textSize="@dimen/currency_name_text_size"
        android:textStyle="bold"
        tools:text="BTC" />

</LinearLayout>